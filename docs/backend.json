{
  "entities": {
    "Product": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Product",
      "type": "object",
      "description": "Represents a product in the inventory.",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the product."
        },
        "sku": {
          "type": "string",
          "description": "The Stock Keeping Unit (SKU) of the product."
        },
        "category": {
          "type": "string",
          "description": "The category of the product."
        },
        "quantity": {
          "type": "number",
          "description": "The current stock quantity of the product."
        },
        "location": {
          "type": "string",
          "description": "The storage location of the product."
        },
        "reorderPoint": {
          "type": "number",
          "description": "The reorder point for the product."
        }
      },
      "required": [
        "name",
        "sku",
        "category",
        "quantity",
        "location",
        "reorderPoint"
      ]
    },
    "Loan": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Loan",
      "type": "object",
      "description": "Represents a product loan.",
      "properties": {
        "productName": {
          "type": "string",
          "description": "The name of the loaned product."
        },
        "requester": {
          "type": "string",
          "description": "The person or team who requested the loan."
        },
        "loanDate": {
          "type": "string",
          "description": "The date the loan was made.",
          "format": "date-time"
        },
        "quantity": {
          "type": "number",
          "description": "The number of items loaned."
        },
        "status": {
          "type": "string",
          "description": "The status of the loan.",
          "enum": [
            "Prestado",
            "Devuelto"
          ]
        },
        "productId": {
          "type": "string",
          "description": "The ID of the loaned product."
        }
      },
      "required": [
        "productName",
        "requester",
        "loanDate",
        "quantity",
        "status",
        "productId"
      ]
    },
    "User": {
      "title": "User",
      "description": "Represents a user account with role-based access control.",
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "role": {
          "type": "string",
          "description": "The role of the user, which determines their permissions.",
          "enum": [
            "admin",
            "user"
          ]
        },
        "name": {
          "type": "string",
          "description": "The display name of the user."
        }
      },
      "required": [
        "email",
        "role",
        "name"
      ]
    }
  },
  "auth": {
    "providers": [
      "emailPassword"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/products/{productId}",
        "definition": {
          "entityName": "Product",
          "schema": {
            "$ref": "#/backend/entities/Product"
          },
          "description": "Stores all products in the inventory."
        }
      },
      {
        "path": "/loans/{loanId}",
        "definition": {
          "entityName": "Loan",
          "schema": {
            "$ref": "#/backend/entities/Loan"
          },
          "description": "Stores all product loans."
        }
      },
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "User",
          "schema": {
            "$ref": "#/backend/entities/User"
          },
          "description": "Stores user profile information, including their role."
        }
      }
    ]
  }
}
