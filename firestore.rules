
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Regla global simple:
    // Permite acceso completo de lectura y escritura a CUALQUIER colección 
    // para CUALQUIER usuario que haya iniciado sesión.
    // Esto es apropiado para un panel de administración interno donde
    // todos los usuarios son de confianza y simplifica enormemente las operaciones.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
